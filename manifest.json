{
    "name": "Web page dependent password generator",
    "description": "Final password is cryptographically derived from web page URL address and user provided secret passphrase.",
    "version": "1.0",
    "permissions": [
        "contextMenus",
        "storage",
        "activeTab",
        "<all_urls>"
    ],
    "options_page": "options.html",
    "background": {
        "scripts": [//"lib/pbkdf2.js",
            "main.js"
        ],
        "persistent": false
    },
    "content_scripts": [{
        "all_frames": true,
        "matches": ["http://*/*", "https://*/*"],
        "css": ["theme/jquery-ui.css"],
        "js": [ //"js/modernizr-2.0.6.min.js",
            "js/jquery.min.js",
            "js/jquery-ui.min.js",
            "js/jquery.imgpreload.min.js",
            //"js/jquery-ui.toggleSwitch.js",
            "lib/pbkdf2.js",
            "crypto_helpers.js",
            "content_script.js"
        ]
    }],
    "web_accessible_resources": [
        "theme/images/*.png",
        "theme/jquery-ui.css"
    ],
    "icons": {
        "128": "img/icon.png"
    },
    "manifest_version": 2
}
